<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="213.0" prefWidth="320.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.EditUser">
    <left>
        <FlowPane alignment="TOP_CENTER" orientation="VERTICAL" prefHeight="400.0" prefWidth="98.0" BorderPane.alignment="CENTER">
            <children>
                <Label text="Họ tên">
                    <FlowPane.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </FlowPane.margin>
                    <padding>
                        <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
                    </padding>
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font>
                </Label>
                <Label text="Ngày sinh">
                    <padding>
                        <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
                    </padding>
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font>
                    <FlowPane.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </FlowPane.margin>
                </Label>
                <Label text="Địa chỉ">
                    <padding>
                        <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
                    </padding>
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font>
                    <FlowPane.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </FlowPane.margin>
                </Label>
                <Label text="Số điện thoại">
                    <padding>
                        <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
                    </padding>
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font>
                    <FlowPane.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </FlowPane.margin>
                </Label>
            </children>
        </FlowPane>
    </left>
    <right>
        <FlowPane alignment="TOP_CENTER" orientation="VERTICAL" prefHeight="131.0" prefWidth="222.0" BorderPane.alignment="CENTER">
            <children>
                <TextField fx:id="fullName">
                    <FlowPane.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </FlowPane.margin>
                    <padding>
                        <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
                    </padding>
                </TextField>
            <DatePicker fx:id="dob" editable="false" maxHeight="-Infinity" minHeight="-Infinity" prefHeight="21.6">
               <FlowPane.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </FlowPane.margin>
            </DatePicker>
                <TextField fx:id="address">
                    <padding>
                        <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
                    </padding>
                    <FlowPane.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </FlowPane.margin>
                </TextField>
                <TextField fx:id="phone">
                    <padding>
                        <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
                    </padding>
                    <FlowPane.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </FlowPane.margin>
                </TextField>
            </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
        </FlowPane>
    </right>
    <bottom>
        <FlowPane alignment="TOP_CENTER" prefHeight="60.0" prefWidth="321.0" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="deleteBtn" mnemonicParsing="false" onMouseClicked="#delete" text="XOÁ">
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font>
                    <FlowPane.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </FlowPane.margin>
                </Button>
                <Button fx:id="saveBtn" mnemonicParsing="false" onMouseClicked="#save" text="LƯU">
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font>
                    <FlowPane.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </FlowPane.margin>
                </Button>
            <Button fx:id="passwordBtn" mnemonicParsing="false" onMouseClicked="#changePassword" text="ĐỔI MẬT KHẨU">
               <FlowPane.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </FlowPane.margin>
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Button>
                <Button fx:id="cancelBtn" mnemonicParsing="false" onMouseClicked="#cancel" text="THOÁT">
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font>
                    <FlowPane.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </FlowPane.margin>
                </Button>
            </children>
        </FlowPane>
    </bottom>
</BorderPane>
